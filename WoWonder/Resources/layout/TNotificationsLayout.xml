<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/swipeRefreshLayout"
	android:layout_width="match_parent"
	android:layout_alignParentTop="false"
	android:layout_height="wrap_content"
	android:paddingStart="5dp"
	android:paddingEnd="5dp"
	android:paddingTop="5dp"
	android:paddingBottom="50dp"
	android:layout_centerVertical="true"
	android:background="?attr/colorFill">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="top"
			android:orientation="vertical"> 
			<ViewStub
				android:id="@+id/viewStubAnnouncement"
				android:inflatedId="@+id/stubViewAnnouncement"
				android:layout_width="match_parent"
				android:layout_height="140dp"
				android:layout_marginBottom="10dp"
				android:layout="@layout/viewmodel_announcement" />
			<ViewStub
				android:id="@+id/viewStubFriendRequest"
				android:inflatedId="@+id/stubViewFriendRequest"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:layout="@layout/viewmodel_request" />
			<ViewStub
				android:id="@+id/viewStubCommunitiesRequest"
				android:inflatedId="@+id/stubViewCommunitiesRequest"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:layout="@layout/viewmodel_request" />
			<View
				android:id="@+id/DividerView"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="?attr/colorDivider"/>
			<com.google.android.material.tabs.TabLayout
				android:id="@+id/tab_home"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginLeft="-90dp"
				android:background="?attr/colorFill"
				app:tabBackground="@android:color/transparent"
				app:tabGravity="start"
				app:tabIndicator="@drawable/tab_indicator"
				app:tabIndicatorColor="@color/accent"
				app:tabIndicatorFullWidth="false"
				app:tabIndicatorHeight="5dp"
				app:tabMode="fixed"
				app:tabPaddingEnd="10dp"
				app:tabPaddingStart="10dp"
				app:tabRippleColor="@android:color/transparent"
				app:tabSelectedTextColor="@color/accent"
				app:tabTextAppearance="@style/TextAppearance.MaterialComponents.Body2"
				app:tabTextColor="?attr/colorReact"
				android:layout_alignParentStart="true">
				<com.google.android.material.tabs.TabItem
					android:id="@+id/tab_all"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:text="@string/Lbl_All"/>
				<com.google.android.material.tabs.TabItem
					android:id="@+id/tab_lastActivities"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_LastActivities"/>
				<com.google.android.material.tabs.TabItem
					android:id="@+id/tab_friendsBirthday"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_FriendsBirthday"/>
			</com.google.android.material.tabs.TabLayout>
		</LinearLayout>
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recyler"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scrollbars="vertical" />
		<ViewStub
			android:id="@+id/viewStub"
			android:inflatedId="@+id/subView"
			android:layout_marginTop="35dp"
			android:layout_centerInParent="true"
			android:layout_gravity="center"
			android:gravity="center"
			android:layout="@layout/EmptyStateLayout"
			android:layout_width="match_parent"
			android:layout_height="400dp" />
	</LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>